<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <title>Folder Details | File Uploader</title>
        <link
            rel="stylesheet"
            href="/stylesheets/index.css"
        />
        <link
            rel="stylesheet"
            href="/stylesheets/variables.css"
        />
        <link
            rel="stylesheet"
            href="/stylesheets/file-folder-details.css"
        />
        <link
            rel="stylesheet"
            href="/stylesheets/vertical-navbar.css"
        />
        <link
            rel="stylesheet"
            href="/stylesheets/horizontal-navbar.css"
        />
        <link
            rel="stylesheet"
            href="/stylesheets/reusable-components.css"
        />
        <link 
            rel="stylesheet" 
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" 
        />
        <script defer src="/javascript/folder-details/delete-folder.js"></script>
        <link rel="icon" type="image/png" href="/icons/favicon-32x32.png" sizes="32x32" />
        <link rel="icon" type="image/png" href="/icons/favicon-16x16.png" sizes="16x16" />
    </head>
    <body>
        <%- include("../partials/vertical-navbar.ejs") %> <% if(locals.folder) { %>
        <%- include("../partials/errors.ejs", { errors: locals.validationErrors })  %>
        <main class="folder-details">
            <%- include("../partials/horizontal-navbar.ejs") %>
            <div class="content">
                <div class="wrapper">
                    <h1 class="folder-name">
                        <%= folder.name %>
                    </h1>
                    <div class="folder-icon">
                        <span class="icon material-symbols-rounded">
                            folder
                        </span>
                    </div>
                    <div class="details-container">
                        <div class="field created-at">
                            <span class="icon material-symbols-rounded">
                                history
                            </span>
                            <div class="vertical-separator"></div>
                            <p>
                                <%= folder.createdAt %>
                            </p>
                        </div>
                        <% if(folder.createdAt != folder.updatedAt) { %>
                            <div class="field updated-at">
                                <span class="icon material-symbols-rounded">
                                    update
                                </span>
                                <div class="vertical-separator"></div>
                                <p>
                                    <%= folder.updatedAt %>
                                </p>
                            </div>
                        <% } %>
                        <div class="field files-length">
                            <span class="icon material-symbols-rounded">
                                files
                            </span>
                            <div class="vertical-separator"></div>
                            <p>
                                This folder has:
                                <%= folder.files.length %> <%= folder.files.length === 1 ? 'file' : 'files' %>.
                            </p>
                        </div>
                        <form 
                            action="/my-storage/update-folder/<%= folder.name %>"
                            method="POST"
                            class="update-folder-form"
                        >
                            <div class="input-field">
                                <label for="updatedFolderName">
                                    Update folder name
                                </label>
                                <div class="icon-and-input">
                                    <div class="icon">
                                        <span class="material-symbols-rounded">
                                            folder
                                        </span>
                                    </div>
                                    <input 
                                        class="input"
                                        type="text"
                                        name="updatedFolderName"
                                        id="updatedFolderName"
                                        value="<%= folder.name %>"
                                    >
                                </div>
                            </div>
                            <button 
                                class="button"
                                type="submit"
                            >
                                Update
                            </button>
                        </form>
                        <div class="buttons-container">
                            <button class="button delete-folder">
                                Delete
                            </button>
                            <dialog class="delete-folder-dialog">
                                <form 
                                    action="/my-storage/delete-folder/<%= folder.name %>" 
                                    method="POST" 
                                    class="delete-folder-form"
                                >
                                    <p>
                                        Delete "<%= folder.name %>" folder?
                                    </p>
                                    <span>
                                        (This can't be undone)
                                    </span>
                                    <button type="submit">
                                        Delete
                                    </button>
                                    <button class="button cancel-folder-delete" type="button">
                                        Cancel
                                    </button>
                                </form>
                            </dialog>
                        </div>
                        <% } %>
                    </div>
                </div>
                <%- include("../partials/my-storage-files.ejs", {files: locals.folder.files, filesInFolder:true}) %>
            </div>
        </main>
    </body>
</html>
